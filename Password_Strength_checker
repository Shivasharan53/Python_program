from flask import Flask, request, render_template_string
import re

app = Flask(__name__)

# HTML template for the password form
HTML_FORM = """
<!DOCTYPE html>
<html>
<head><title>Password Strength Checker</title></head>
<body>
    <h2>üîê Password Strength Checker</h2>
    <form method="post">
        <label for="password">Enter Password:</label><br>
        <input type="password" name="password" required><br><br>
        <input type="submit" value="Check Strength">
    </form>
    {% if strength %}
        <h3>Result: {{ strength }}</h3>
    {% endif %}
</body>
</html>
"""

def evaluate_password_strength(password):
    """Evaluate password strength based on several criteria"""
    if len(password) < 8:
        return "‚ùå Too short (minimum 8 characters)"
    if not re.search(r"[A-Z]", password):
        return "‚ùå Must include at least one uppercase letter"
    if not re.search(r"[a-z]", password):
        return "‚ùå Must include at least one lowercase letter"
    if not re.search(r"[0-9]", password):
        return "‚ùå Must include at least one digit"
    if not re.search(r"[!@#$%^&*(),.?\":{}|<>]", password):
        return "‚ùå Must include at least one special character"
    return "‚úÖ Strong Password"

@app.route('/', methods=['GET', 'POST'])
def password_check():
    strength = ""
    if request.method == 'POST':
        password = request.form.get('password')  # Extract password from form

        strength = evaluate_password_strength(password)

    return render_template_string(HTML_FORM, strength=strength)

if __name__ == '__main__':
    app.run(debug=True)
